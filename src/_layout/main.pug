doctype html
html
  head
    meta(charset="utf8")
    //- site.data.resume.page.pageTitle is equal to
    //- src, _data, resume.json, page, pageTitle
    title #{site.data.resume.page.pageTitle}

    //- grab the pageDescription from src, _data, resume.json,
    //- page and insert it into meta description for SEO
    meta(name="description", content=site.data.resume.page.pageDescription)
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

    //- style.scss will be compiled into style.css
    //- so we make use of it below
    //- the value of config.entry.css.external can be found in package.json
    //- and you can navigate to the "config" property, down to "entry", and
    //- into "css" and finally to "external" and find the value to be "true"
    //- or "false"
    if config.entry.css.external
      link(rel="stylesheet", href="style.css")
  body
    .container
      block content
